extends ../layout.pug

block content
    .posts
        .row
            .col-lg-12
                h6.my-4.title-form
                    strong
                        | Lista de Posts
            .col-lg-12
                table.table.table-striped
                    thead
                        tr
                            //- th Fecha
                            //- th id
                            th Título
                            th Contenido
                            th Categoría
                            th Imagen
                            th Acciones
                    tbody
                        each post in posts
                            tr
                                //- td= post.fecha
                                //- td= post._id
                                td= post.titulo
                                td= post.contenido
                                td= post.categoria
                                td= post.url_imagen
                                td
                                    a.btn.btn-outline-secondary.btn-sm.m-1(href="/posts/editar/"+post._id, target="") EDITAR
                                    a.btn.btn-outline-danger.btn-sm.m-1(href="/posts/borrar/"+post._id, target="") BORRAR
                        else
                            tr
                                td(colspan="6") No hay posts en my blog
